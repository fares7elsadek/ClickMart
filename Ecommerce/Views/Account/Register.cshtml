@model RegisterViewModel
@{
	Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Login Page</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link href="~/css/Account.css" rel="stylesheet" />
</head>
<body>
	<div class="d-flex justify-content-center mb-1 mt-3">
		<img class="img-fluid" src="https://mdbootstrap.com/img/logo/mdb-transaprent-noshadows.png" height="35" />
	</div>
	<div class="container mt-5 border border-info-subtle rounded p-3">
		<div class="row">
			<div class="panel panel-primary">
				<div class="panel-body">
					<form asp-action="register">
						<div class="form-group mb-3">
							<h2>Create account</h2>
						</div>
						<div class="form-group mb-3">
							<label asp-for="UserName" style="font-weight:bold">Your username</label>
							<input asp-for="UserName" class="form-control">
							<span class="text-danger" asp-validation-for="UserName"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Email" style="font-weight:bold">Email or mobile phone number</label>
							<input asp-for="Email" class="form-control">
							<span class="text-danger" asp-validation-for="Email"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Password" style="font-weight:bold">Password</label>
							<input asp-for="Password" class="form-control">
							<span class="text-danger" asp-validation-for="Password"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="ConfirmPassword" style="font-weight:bold">Re-enter password</label>			
							<input asp-for="ConfirmPassword" class="form-control">
							<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
						</div>
						<div class="form-group" style="padding-top: 12px;">
							<button id="signinSubmit" type="submit" class="btn btn-success btn-block" style="width:100%">Continue</button>
						</div>
						<p class="form-group mt-3" style="font-size:10px">By creating an account, you agree to our <a href="#">Terms of Use</a> and our <a href="#">Privacy Policy</a>.</p>
						<hr class="mt-3 mb-3"/>
						<p class="form-group" style="font-size:12px">Already have an account? <a asp-action="login">Sign in</a></p>
					</form>
				</div>
			</div>
		</div>
	</div>
	<hr class="line" />
	<div class="d-flex flex-row justify-content-center footer_1 mt-2">
		<div class="row">
			<div class="col">
				<p class="conditions"><a>Conditions of Use &nbsp &nbsp &nbsp </a>   <a>Privacy Notice&nbsp &nbsp &nbsp </a>   <a>Help&nbsp &nbsp &nbsp </a></p>
				<p class="copy-right">&copy; 2024 ClickMart. All rights reserved.</p>
			</div>
		</div>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<partial name="_ValidationScriptsPartial" />
</body>
</html>
