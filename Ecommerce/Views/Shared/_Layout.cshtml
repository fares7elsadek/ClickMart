<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecommerce.styles.css" asp-append-version="true" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <!-- Reviews Css File -->
    <link rel="stylesheet" href="~/css/Reviews.css" />


    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/css/all.min.css" />
</head>
<body>
    <!-- Main Navigation -->
    <header>
        <!-- Jumbotron -->
        <div class="p-3 text-center bg-white border-bottom">
            <div class="container">
                <div class="row gy-3 align-items-center">
                    <!-- Logo -->
                    <div class="col-lg-2 col-md-3 col-sm-4 col-4">
                        <a href="/" class="float-start">
                            <img src="https://mdbootstrap.com/img/logo/mdb-transaprent-noshadows.png" height="35" alt="Brand Logo" />
                        </a>
                    </div>
                    <!-- Search Bar -->
                    <div class="col-lg-5 col-md-6 col-sm-8 col-8">
                        <div class="input-group">
                            <input type="search" id="form1" class="form-control border-end-0" placeholder="Search" aria-label="Search" />
                            <button type="button" class="btn btn-primary border-start-0">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <!-- Cart and Login/Logout -->
                    <div class="col-lg-5 col-md-12 col-sm-12 col-12 d-flex justify-content-end align-items-center">
                        <partial name="_CartPartial" />
                        <div class="d-flex align-items-center">
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @RenderSection("headingSection", false)
        @RenderSection("ProductHeading", false)
        @RenderSection("Jumbotron", false)
    </header>

    <partial name="_NotificationsPartial" />
    @RenderBody()

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    @* <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script> *@
    <!-- fontawesome js file -->
    <script src="~/js/all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
