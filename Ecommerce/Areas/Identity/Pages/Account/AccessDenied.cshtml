@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger text-center shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h2><i class="bi bi-x-circle-fill"></i> @ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <p class="card-text text-danger fs-5">You do not have access to this resource.</p>
                    <a href="/" class="btn btn-primary mt-3"><i class="bi bi-house-door"></i> Go to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
