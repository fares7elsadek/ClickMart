@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Login Page</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link href="~/css/Account.css" rel="stylesheet" />
</head>
<body>
	<div class="d-flex justify-content-center mb-1 mt-3">
		<img class="img-fluid" src="~/Images/logo/logo.png" style="width:100px;height:100px" />
	</div>
	<div class="container mt-5 border border-info-subtle rounded p-3">
		<div class="row">
			<div class="panel panel-primary">
				<div class="panel-body">
					<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
						<div class="form-group mb-3">
							<h2>Create account</h2>
						</div>
						<div asp-validation-summary="All" class="text-danger" role="alert"></div>
						<div class="form-group mb-3">
							<label asp-for="Input.FirstName" style="font-weight:bold"></label>
							<input asp-for="Input.FirstName" class="form-control" placeholder="First name">
							<span class="text-danger" asp-validation-for="Input.FirstName"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Input.LastName" style="font-weight:bold"></label>
							<input asp-for="Input.LastName" class="form-control" placeholder="Last name">
							<span class="text-danger" asp-validation-for="Input.LastName"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Input.UserName" style="font-weight:bold">Your username</label>
							<input asp-for="Input.UserName" class="form-control" placeholder="Username">
							<span class="text-danger" asp-validation-for="Input.UserName"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Input.Email" style="font-weight:bold">Email</label>
							<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Input.Password" style="font-weight:bold">Password</label>
							<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Input.ConfirmPassword" style="font-weight:bold">Confirm Password</label>
							<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
							<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
						</div>
						<div class="form-group" style="padding-top: 12px;">
							<button id="signinSubmit" type="submit" class="btn btn-success btn-block" style="width:100%">Continue</button>
						</div>
						<p class="form-group mt-3" style="font-size:10px">By creating an account, you agree to our <a href="#">Terms of Use</a> and our <a href="#">Privacy Policy</a>.</p>
						<hr class="mt-3 mb-3" />
						<p class="form-group" style="font-size:12px">Already have an account? <a asp-page="./Login">Sign in</a></p>
					</form>
				</div>
			</div>
		</div>
	</div>
	<hr class="line" />
	<div class="d-flex flex-row justify-content-center footer_1 mt-2">
		<div class="row">
			<div class="col">
				<p class="conditions"><a>Conditions of Use &nbsp &nbsp &nbsp </a>   <a>Privacy Notice&nbsp &nbsp &nbsp </a>   <a>Help&nbsp &nbsp &nbsp </a></p>
				<p class="copy-right">&copy; 2024 ClickMart. All rights reserved.</p>
			</div>
		</div>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<partial name="_ValidationScriptsPartial" />
</body>
</html>

