@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #f8f9fa;">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 12px;">
        <div class="card-body text-center">
            <h1 class="card-title mb-4" style="font-size: 24px; color: #333;">@ViewData["Title"]</h1>
            <p class="text-muted mb-4">
                Please check your email for a link to reset your password. If you don’t see the email, check your spam or junk folder.
            </p>
            <a href="/" class="btn btn-primary btn-lg" style="border-radius: 8px;">Go to Home</a>
        </div>
    </div>
</div>
