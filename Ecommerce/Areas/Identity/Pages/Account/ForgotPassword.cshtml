@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #f8f9fa;">
    <div class="card shadow-lg" style="max-width: 400px; width: 100%; border-radius: 12px;">
        <div class="card-body p-4">
            <h1 class="card-title text-center mb-4" style="font-size: 24px; color: #333;">@ViewData["Title"]</h1>
            <p class="text-center text-muted">Enter your email to reset your password.</p>
            <hr />
            <form method="post" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" id="emailInput" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label for="emailInput" class="form-label">Email address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-lg" style="border-radius: 8px;">Reset Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
