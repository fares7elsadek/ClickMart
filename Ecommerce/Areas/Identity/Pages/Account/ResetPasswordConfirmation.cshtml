@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #f8f9fa;">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 12px;">
        <div class="card-body text-center">
            <h1 class="card-title mb-4" style="font-size: 24px; color: #333;">@ViewData["Title"]</h1>
            <p class="text-muted mb-4">Your password has been successfully reset.</p>
            <p class="mb-4">Please <a asp-page="./Login" class="text-primary font-weight-bold">click here to log in</a>.</p>
            <a href="/Login" class="btn btn-primary btn-lg w-100" style="border-radius: 8px;">Log In</a>
        </div>
    </div>
</div>
