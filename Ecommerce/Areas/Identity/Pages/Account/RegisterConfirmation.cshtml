@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register Confirmation";
}

<div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 500px;">
        <div class="card-body text-center">
            <h2 class="card-title mb-4">Registration Successful!</h2>
            <p class="card-text mb-4">
                Thank you for registering! To complete your registration, please check your email inbox for a confirmation link.
            </p>
            <p class="card-text text-muted">
                If you do not receive the email within a few minutes, please check your spam or junk folder.
            </p>
        </div>
    </div>
</div>

