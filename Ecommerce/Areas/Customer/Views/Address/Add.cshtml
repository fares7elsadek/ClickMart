@model Address
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="content m-auto mt-5 p-4 border rounded-3 shadow-sm" style="max-width: 600px;">
        <h2 class="mb-4 text-center">Add new address</h2>
        <form asp-action="Add">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="UnitNumber" class="form-label"></label>
                <input asp-for="UnitNumber" class="form-control" />
            </div>


            <div class="mb-3">
                <label asp-for="StreetNumber" class="form-label"></label>
                <input asp-for="StreetNumber" class="form-control" />
            </div>


            <div class="mb-3">
                <label asp-for="AddressLine1" class="form-label"></label>
                <input asp-for="AddressLine1" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="AddressLine2" class="form-label"></label>
                <input asp-for="AddressLine2" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Region" class="form-label"></label>
                <input asp-for="Region" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="PostalCode" class="form-label"></label>
                <input asp-for="PostalCode" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="CountryId" class="form-label">Country</label>
                <select asp-for="CountryId" asp-items="@ViewBag.Countries" class="form-select" required>
                    <option disabled selected>--Select Category--</option>
                </select>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button id="update-profile-button" type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
        </<div>
        </div>

