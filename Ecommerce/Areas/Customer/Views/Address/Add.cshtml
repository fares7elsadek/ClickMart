@model Address
@{
    ViewData["Title"] = "Add New Address";
}

<div class="container">
    <div class="content m-auto mt-5 p-4 border rounded-3 shadow-sm bg-white" style="max-width: 600px;">
        <h2 class="mb-4 text-center">Add New Address</h2>
        <form asp-action="Add" novalidate>
            <div asp-validation-summary="All"></div>

            <!-- Unit Number -->
            <div class="mb-3">
                <label asp-for="UnitNumber" class="form-label">Unit Number</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-building"></i></span>
                    <input asp-for="UnitNumber" class="form-control" placeholder="Enter Unit Number" />
                </div>
                <span asp-validation-for="UnitNumber" class="text-danger"></span>
            </div>

            <!-- Street Number -->
            <div class="mb-3">
                <label asp-for="StreetNumber" class="form-label">Street Number</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-map"></i></span>
                    <input asp-for="StreetNumber" class="form-control" placeholder="Enter Street Number" />
                </div>
                <span asp-validation-for="StreetNumber" class="text-danger"></span>
            </div>

            <!-- Address Line 1 -->
            <div class="mb-3">
                <label asp-for="AddressLine1" class="form-label">Address Line 1</label>
                <input asp-for="AddressLine1" class="form-control" placeholder="Enter Address Line 1" />
                <span asp-validation-for="AddressLine1" class="text-danger"></span>
            </div>

            <!-- Address Line 2 -->
            <div class="mb-3">
                <label asp-for="AddressLine2" class="form-label">Address Line 2 (Optional)</label>
                <input asp-for="AddressLine2" class="form-control" placeholder="Enter Address Line 2" />
                <span asp-validation-for="AddressLine2" class="text-danger"></span>
            </div>

            <!-- City -->
            <div class="mb-3">
                <label asp-for="City" class="form-label">City</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                    <input asp-for="City" class="form-control" placeholder="Enter City" />
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <!-- Region -->
            <div class="mb-3">
                <label asp-for="Region" class="form-label">Region</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-compass"></i></span>
                    <input asp-for="Region" class="form-control" placeholder="Enter Region" />
                </div>
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>

            <!-- Postal Code -->
            <div class="mb-3">
                <label asp-for="PostalCode" class="form-label">Postal Code</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-mailbox"></i></span>
                    <input asp-for="PostalCode" class="form-control" placeholder="Enter Postal Code" />
                </div>
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>

            <!-- Country -->
            <div class="mb-3">
                <label asp-for="CountryId" class="form-label">Country</label>
                <select asp-for="CountryId" asp-items="@ViewBag.Countries" class="form-select" required>
                    <option disabled selected>--Select Country--</option>
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <!-- IsDefault -->
            <div class="mb-3 form-check">
                <input asp-for="IsDefault" class="form-check-input" />
                <label asp-for="IsDefault" class="form-check-label">Set as Default Address</label>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle-fill me-2"></i>Add Address
                </button>
            </div>
        </form>
    </div>
</div>
