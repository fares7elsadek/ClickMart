@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}

@section Jumbotron {
    <partial name="_JumbotronPartial" />
}
@section headingSection {
    <partial name="_CollapseWrapperPartial" />
}

@Html.AntiForgeryToken()
<!-- Products -->
<section>
    <div class="container my-5">
        <header class="mb-4">
            <h3>New Products</h3>
        </header>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 d-flex">
                    <div class="card my-2 shadow-sm border-0 rounded-3 w-100" style="display: flex; flex-direction: column; height: 100%;">
                        <a asp-area="Customer" asp-controller="Product" asp-action="Details" asp-route-Id="@product.Id" class="text-decoration-none text-dark">
                            <div class="card-img-top position-relative" style="height: 250px; overflow: hidden;">
                                <img src="@product.ImageUrl" class="img-fluid rounded-3 w-100 h-100" style="object-fit: cover;" />
                                <div class="badge bg-danger position-absolute top-0 start-0 m-2">New</div>
                            </div>
                        </a>
                        <div class="card-body p-3 d-flex flex-column justify-content-between" style="flex-grow: 1;">
                            <div>
                                <h5 class="card-title mb-2">@product.Title</h5>
                                <span class="text-muted">@product.Price.ToString("C")</span>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-3">
                                <div class="text-muted small">
                                    Model: X-200
                                </div>
                                <div class="text-warning small">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                    <i class="far fa-star"></i>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between mt-3">
                                <a href="#!" class="btn btn-sm btn-light border-0 shadow-sm rounded-circle icon-hover">
                                    <i class="fas fa-heart text-danger"></i>
                                </a>

                                <button type="button" class="btn btn-sm btn-light border-0 shadow-sm rounded-circle icon-hover" onclick="addToCart('@Url.Action("AddToCart", "Product", new { area = "Customer" })','@product.Id')">
                                    <i class="fas fa-shopping-cart text-success"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Products -->

<partial name="_ProductPartial" />
<partial name="_FeaturesPartial" />
<partial name="_BlogPartial" />
<partial name="_FooterPartial" />

@section Scripts{
    <script>
        function addToCart(url, productId) {
            var quantity = 1;
            var token = $('input[name="__RequestVerificationToken"]').val();
            $.ajax({
                url: url,
                type: "POST",
                headers: {
                    "RequestVerificationToken": token
                },
                data: {
                    cart: {
                        Quantity: quantity,
                        ProductId: productId
                    }
                },
                success: function (data) {
                    if (data.success) {
                        toastr.success(data.message);
                    } else {
                        toastr.error(data.message);
                    }
                },
                error: function (err) {
                    toastr.error("An error occurred while trying to add the product to the cart.");
                }
            });
        }
    </script>
}