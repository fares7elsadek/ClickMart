@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}

@section Jumbotron {
    <partial name="_JumbotronPartial" />
}
@section headingSection {
    <partial name="_CollapseWrapperPartial" />
}
<!-- Products -->
<section>
    <div class="container my-5">
        <header class="mb-4">
            <h3>New products</h3>
        </header>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card my-2 shadow-0">
                        <a asp-area="Customer" asp-controller="Product" asp-action="Details" asp-route-Id="@product.Id" class="text-decoration-none text-dark">
                            <div class="mask" style="height: 50px;">
                                <div class="d-flex justify-content-start align-items-start h-100 m-2">
                                    <h6><span class="badge bg-danger pt-1">New</span></h6>
                                </div>
                            </div>
                            <img src="@product.ImageUrl" class="card-img-top rounded-2" style="aspect-ratio: 1 / 1" />
                        </a>
                        <div class="card-body p-2 pt-3">
                            <a href="#!" class="btn btn-light border px-2 pt-2 float-end icon-hover"><i class="fas fa-heart fa-lg px-1 text-secondary"></i></a>
                            <h5 class="card-title">@product.Price.ToString("C")</h5>
                            <p class="card-text mb-0">@product.Title</p>
                            <p class="text-muted">
                                Model: X-200
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Products -->

<partial name="_ProductPartial" />
<partial name="_FeaturesPartial" />
<partial name="_BlogPartial" />
<partial name="_FooterPartial" />
