@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}

@section Jumbotron {
    <partial name="_JumbotronPartial" />
}

<!-- Products -->
<section>
    <div class="container my-5">
        <header class="mb-4">
            <h3>New products</h3>
        </header>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 d-flex">
                    <div class="card w-100 my-2 shadow-sm border-0">
                        <a asp-area="Customer" asp-controller="Product" asp-action="Details" asp-route-Id="@product.Id" class="text-decoration-none text-dark">
                            <img src="https://mdbootstrap.com/img/bootstrap-ecommerce/items/1.webp" class="card-img-top" style="aspect-ratio: 1 / 1; object-fit: cover;" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title mb-2">@product.Title</h5>
                                <p class="card-text text-muted mb-2">@product.Price.ToString("C")</p>
                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    <a href="#!" class="btn btn-primary btn-sm shadow-0">Add to cart</a>
                                    <a href="#!" class="btn btn-light border-0 p-2 icon-hover">
                                        <i class="fas fa-heart fa-lg text-secondary"></i>
                                    </a>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Products -->

<partial name="_ProductPartial" />
<partial name="_FeaturesPartial" />
<partial name="_BlogPartial" />
<partial name="_FooterPartial" />
