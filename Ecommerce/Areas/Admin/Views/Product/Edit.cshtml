@model Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container">
    <div class="content m-auto mt-5 p-4 border rounded-3 shadow-sm" style="max-width: 600px;">
        <h2 class="mb-4 text-center">Edit Product</h2>
        <form asp-action="Edit">
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Product Title</label>
                <input class="form-control" asp-for="Title" placeholder="Enter product title" required>
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea class="form-control" asp-for="Description" placeholder="Enter product description"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Product price</label>
                <input class="form-control" asp-for="Price" placeholder="Enter product price" required>
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>


