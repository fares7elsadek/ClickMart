@model Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container">
    <div class="content m-auto mt-5 p-4 border rounded-3 shadow-sm" style="max-width: 600px;">
        <h2 class="mb-4 text-center">Edit Category</h2>
        <form asp-action="Edit">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Category Name</label>
                <input  class="form-control" asp-for="Name" placeholder="Enter category name" required>
            </div>

            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                <input  class="form-control" asp-for="DisplayOrder" placeholder="Enter display order" required>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Display Order</label>
                <input class="form-control"  asp-for="Description" placeholder="Enter Category Description" required>
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>


