@model List<Category>

@{
    ViewData["Title"] = "Manage Categories";
}
@Html.AntiForgeryToken()
<div class="container">
    <div class="content m-auto mt-5" style="width: 100%;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Categories</h2>
            <a class="btn btn-primary rounded-pill d-flex align-items-center" href="@Url.Action("Upsert")">
                <i class="bi bi-plus-circle me-2"></i> Create New Category
            </a>
        </div>
        <div class="table-responsive">
            <table id="CategoryDataTable" class="table table-hover align-middle text-center" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Category Name</th>
                        <th scope="col">Display Order</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section Navbar {
    <partial name="_NavbarPartial" model="@ViewBag.User" />
}

@section Sidebar {
    <partial name="_SidbarPartial" model="@ViewBag.User" />
}
@section Scripts {
    <script src="~/js/Category/CategoryDataTable.js"></script>
}
