@model Category

@{
    ViewData["Title"] = "Create New Category";
}

<div class="container">
    <div class="content m-auto mt-5 p-4 border rounded-3 shadow-sm" style="max-width: 600px;">
        <h2 class="mb-4 text-center">Create New Category</h2>
        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Category Name</label>
                <input asp-for="Name"  class="form-control" placeholder="Enter category name" required>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                <input asp-for="DisplayOrder"  class="form-control"  placeholder="Enter display order" required>
                <span class="text-danger" asp-validation-for="DisplayOrder"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control" placeholder="Enter Category Description" required>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Category
                </button>
            </div>
        </form>
    </div>
</div>

