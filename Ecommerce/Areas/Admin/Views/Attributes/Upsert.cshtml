@model Attributes
@{
    var isEditMode = Model?.Id != null;
    ViewData["Title"] = isEditMode ? "Update Attribute" : "Create New Attribute";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0 text-center">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <form asp-action="Upsert">
                        <div class="mb-3">
                            <label asp-for="AttributeName" class="form-label">Attribute Name</label>
                            <input asp-for="AttributeName" class="form-control" placeholder="Enter attribute name" required />
                            <span class="text-danger" asp-validation-for="AttributeName"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="AttributeValue" class="form-label">Attribute Value</label>
                            <input asp-for="AttributeValue" class="form-control" placeholder="Enter attribute value" required />
                            <span class="text-danger" asp-validation-for="AttributeValue"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Products" class="form-label">Products</label>
                            <select asp-for="Products" asp-items="@ViewBag.Products" class="form-select" required>
                            </select>
                            <span class="text-danger" asp-validation-for="Products"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Upsert" asp-controller="Product" asp-route-Id="@ViewBag.ProductId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
